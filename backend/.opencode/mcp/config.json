{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "./src",
        "./pom.xml",
        "./README.md"
      ],
      "env": {}
    },
    "database-explorer": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "mcp/postgres-server",
        "jdbc:postgresql://localhost:5432/bookstore_db",
        "user",
        "password"
      ],
      "disabled": true,
      "description": "Enable this if you switch from H2 to a real Postgres instance to let the agent query data directly."
    }
  },
  "globalTools": [
    {
      "name": "maven_build",
      "description": "Runs the maven wrapper to build the project",
      "command": "./mvnw clean install"
    },
    {
      "name": "run_spring_boot",
      "description": "Starts the Spring Boot application",
      "command": "./mvnw spring-boot:run"
    }
  ]
}
